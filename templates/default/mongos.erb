sharding:
  configDB: <%= @configDB %>
net:
  port: <%= @listenPort %>
  ssl:
    mode: requireSSL
    allowConnectionsWithoutCertificates: true
    allowInvalidCertificates: true
    PEMKeyFile: <%= @key_file %>
  <% if @ca_file %>
    CAFile: <%= @ca_file %>
  <% end %>
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongos.log
